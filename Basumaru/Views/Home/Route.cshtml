                                                    var contentStr = '<div class="infoDiv"><span class="basuteimei">' + item.basuteimei + '</span>' +
                                                                     '<div><span class="yanebenchi"><hr style="margin:0px;">' + yane + '&nbsp;' + benchi + '</span>' + str

                                                    var infowindow = new google.maps.InfoWindow({
                                                        content: contentStr
                                                    });


