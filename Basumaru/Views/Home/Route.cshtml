        <!-- Enclose the Javascript in a "section" so that it is rendered in the correct order after scripts have been loaded etc -->
        @section scripts {
            <section class="scripts">

                <script type="text/javascript">

                        var map;
                        var geocoder;
                        var directions;

                        $(document).ready(function () {
                            Initialize();
                        });

                        function getQuerystring(key, default_) {
                            if (default_ == null) default_ = "";
                            key = key.replace(/[\[]/, "\\\[").replace(/[\]]/, "\\\]");
                            var regex = new RegExp("[\\?&]" + key + "=([^&#]*)");
                            var qs = regex.exec(window.location.href);
                            if (qs == null)
                                return default_;
                            else
                                return qs[1];
                        }

                        function callback_direction(result, status) {
                            if (status == google.maps.DirectionsStatus.OK) {
                                var directionsDisplay = new google.maps.DirectionsRenderer({
                                    map: map,
                                    suppressMarkers: true
                                });
                                directionsDisplay.setDirections(result);
                            }
                        }

                        // Where all the fun happens
                        function Initialize() {

                            //var a = getQuerystring("kigyou");
                            //var b = getQuerystring("rosenmei");

                            a = "福島交通";
                            b = "石川・蓬田";

                            navigator.geolocation.getCurrentPosition(function (pos) {
                                var i = pos.coords.latitude;
                                var k = pos.coords.longitude;

                                // Google has tweaked their interface somewhat - this tells the api to use that new UI
                                google.maps.visualRefresh = true;
                                //var Center = new google.maps.LatLng(i, k);
                                var Center = new google.maps.LatLng(37.215629, 140.567835);

                                // These are options that set initial zoom level, where the map is centered globally to start, and the type of map to show
                                var mapOptions = {
                                    zoom: 14,
                                    center: Center,
                                    mapTypeId: google.maps.MapTypeId.G_NORMAL_MAP
                                };

                                // This makes the div with id "map_canvas" a google map
                                map = new google.maps.Map(document.getElementById("map_canvas"), mapOptions);

                                var request = {
                                    origin: "郡山駅",
                                    destination: "平田村役場",
                                    travelMode: google.maps.DirectionsTravelMode.DRIVING,
                                };

                                var directionsService = new google.maps.DirectionsService();

                                directionsService.route(request, callback_direction);

                                $.ajax({
                                    //url: "http://fic-h24039/basumaruAPI/api/Basuteis/" + a + "/" + b +"?format=json",
                                    url: "http://localhost:49834/Scripts/Basuteis_Route.json",
                                    dataType: 'json',
                                    async: true,
                                    success: function (json) {

                                        $.each(json, function (i, item) {

                                            //console.log("item.basuteimei");

                                            var marker = new google.maps.Marker({
                                                position: new google.maps.LatLng(item.ido, item.keido),
                                                map: map,
                                            });

                                            marker.setVisible(true);

                                            //console.log(item.basuteimei);
                                            //console.log(item.ido);
                                            //console.log(item.keido);

                                            if (item.yaneFlag == 1 || item.benchiFlag == 1) marker.setIcon('/Image/basu_ao.png');
                                            else marker.setIcon('/Image/basu_aka.png');

                                            if(item.yaneFlag==1) {var yane="屋根"}
                                            else {var yane=""};

                                            if(item.benchiFlag==1) {var benchi="ベンチ"}
                                            else {var benchi=""};

                                            //var flag = location.search;

                                            var contentStr = '<div class="infoDiv"><span class="basuteimei">' + item.basuteimei + '</span>' +
                                                             '<div><span class="yanebenchi"><hr style="margin:0px;">' + yane + '&nbsp;' + benchi + '</span>'
                                                             //'<br><br><a href="http://localhost:49834/Home/Index' + flag + '&value=' + item.basuteimei + '"><img src="/Image/sentaku.png"></a></div></div>'

                                            // put in some information about each json object - in this case, the opening hours.
                                            var infowindow = new google.maps.InfoWindow({
                                                content: contentStr
                                            });

                                            // finally hook up an "OnClick" listener to the map so it pops up out info-window when the marker-pin is clicked!
                                            google.maps.event.addListener(marker, 'click', function () {
                                                infowindow.open(map, marker);
                                            });

                                        })
                                    },
                                    error: function () {
                                        console.log("error");
                                    },
                                    beforeSend: function (xhr) {
                                        xhr.overrideMimeType("text/html;charset=SJIS");
                                    }

                                });

                            });
                        }

                </script>
            </section>
        }